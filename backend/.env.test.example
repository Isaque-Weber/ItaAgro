# Arquivo de exemplo para configuração de ambiente de testes
# Copie este arquivo para .env.test e ajuste as variáveis conforme necessário

# Ambiente
NODE_ENV=test
PORT=4001
BACKEND_URL=http://localhost:4001
FRONTEND_URL=http://localhost:5174

# Banco de dados
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/itaagro_test

# JWT
JWT_SECRET=chave_secreta_para_testes_123

# Google OAuth2 (também usado para envio de emails)
GOOGLE_CLIENT_ID=seu_google_client_id
GOOGLE_CLIENT_SECRET=seu_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4001/auth/google/callback
GOOGLE_EMAIL_FROM=seu_email@gmail.com

# OpenAI
OPENAI_API_KEY=sua_chave_da_openai
OPENAI_ASSISTANT_ID=seu_assistant_id

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=TEST-seu_token_de_teste
MP_WEBHOOK_SECRET=seu_webhook_secret_de_teste

# Agrofit
AGROFIT_ACCESS_TOKEN=seu_token_de_teste_agrofit
AGROFIT_CONSUMER_KEY=sua_consumer_key_de_teste

# Nodemailer Gmail OAuth2
# Credenciais para enviar emails via API do Gmail com OAuth2
# O REFRESH_TOKEN é obtido no OAuth Playground
GMAIL_SENDER_EMAIL=seu_email_workspace@example.com
GMAIL_OAUTH_CLIENT_ID=seu_google_client_id
GMAIL_OAUTH_CLIENT_SECRET=seu_google_client_secret
GMAIL_OAUTH_REFRESH_TOKEN=seu_refresh_token_gerado
